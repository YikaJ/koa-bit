<!DOCTYPE html>
<html>
<head>
    <% include public/head.ejs%>
</head>
<body>
<% include public/header.ejs %>
<div class="search-header">
    <div>
        <div class="container">
        <form action="/search" method="get">
            <input name="qs" class="input" value="<%= qs %>" border="0" autocomplete="off" placeholder="查询您需要的科技文献" type="search"/>
            <button type="submit" class="btn btn-primary">搜索</button>
        </form>
    </div></div>
</div>
<div class="container">
    <ul class="search-list">
        <div class="tips">比特能检索为您找到相关结果约 <b><%= recordCount %></b> 个</div>
        <% data.page.recordList.forEach(function(record, index){ %>
        <li>
            <h1 class="title"><a href=""><%- record.title %></a></h1>
            <div class="author">作者：<%= record.authors %></div>
            <p class="summary"><%- record.summary%></p>
        </li>
        <% }) %>
    </ul>
    <% include public/paging.ejs %>
</div>
<% include public/footer.ejs %>
</body>
</html>
